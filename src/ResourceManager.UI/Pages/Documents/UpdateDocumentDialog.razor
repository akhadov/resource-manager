@using ResourceManager.Application.Documents.UpdateDocument
@using ResourceManager.UI.Services.Interfaces
@inject IDocumentService _documentService
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h5">Update Document</MudText>
        <MudTextField Label="Title" @bind-Value="newDocumentTitle" Required="true" />
        <MudTextField Label="Content" @bind-Value="newDocumentContent" Required="true" Multiline="true" Rows="4" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="UpdateDocument">Save</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="CloseDialog">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public Guid? DocumentId { get; set; }
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private string newDocumentTitle = string.Empty;
    private string newDocumentContent = string.Empty;

    private async Task UpdateDocument()
    {
        if (DocumentId.HasValue)
        {
            // Create a new document request with the title and content
            var newDocument = new UpdateDocumentRequest(newDocumentTitle, newDocumentContent);
            var result = await _documentService.UpdateDocuments(DocumentId.Value, newDocument); // Ensure UserId is used correctly
        }

        // Close the dialog
        await CloseDialog();
    }

    private async Task CloseDialog() => MudDialog.Cancel();
}
